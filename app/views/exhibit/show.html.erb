<div class="main exhibit-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @post.title %>
      </p>

      <img src="<%= "/post_images/#{@post.image_name}" %>">

      <p>
        <%= @post.name %>
      </p>
      <p>
        <%= @post.comment %>
      </p>
      <div class="post-time">
        <%= @post.created_at %>
      </div>

        <div class="post-menus">
          <%= link_to("編集", "/exhibit/#{@post.id}/edit") %>
          <%= link_to("削除", "/exhibit/#{@post.id}/destroy", {method: "post"}) %>
        </div>

    </div>
  </div>
</div>
